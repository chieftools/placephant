{
    "name": "chieftools/placephant",
    "description": "ElePHPant placeholders as a service.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "placephant",
        "elephpant"
    ],
    "support": {
        "issues": "https://github.com/chieftools/placephant/issues",
        "source": "https://github.com/chieftools/placephant/tree/main"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/stayallive"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "7.10.*",
        "laravel/framework": "12.40.*",
        "laravel/sanctum": "4.2.*",
        "laravel/tinker": "2.10.*",
        "league/glide-symfony": "2.0.*",
        "sentry/sentry-laravel": "4.16.*"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "3.6.*",
        "friendsofphp/php-cs-fixer": "3.88.*",
        "larastan/larastan": "3.7.*",
        "nunomaduro/collision": "8.8.*",
        "phpunit/phpunit": "12.3.*"
    },
    "replace": {
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@generate:ide"
        ],
        "pre-autoload-dump": [
            "Aws\\Script\\Composer\\Composer::removeUnusedServices"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "cs": [
            "@phpcs",
            "yarn prettier"
        ],
        "ide": "@generate:ide",
        "stan": "@phpstan",
        "check": [
            "@test",
            "@phpcs",
            "@phpstan"
        ],
        "test": "vendor/bin/phpunit --stop-on-failure",
        "test:ci": "vendor/bin/phpunit",
        "test:unit": "vendor/bin/phpunit --testsuite Unit --stop-on-failure",
        "test:feature": "vendor/bin/phpunit --testsuite Feature --stop-on-failure",
        "phpcs": "vendor/bin/php-cs-fixer fix",
        "phpcs:ci": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G",
        "phpstan:ci": "vendor/bin/phpstan analyse --memory-limit=2G --error-format=github",
        "phpstan:pro": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=2G --pro"
        ],
        "generate:ide": [
            "@php artisan ide-helper:meta"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4.2"
        },
        "allow-plugins": {
            "php-http/discovery": false,
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
